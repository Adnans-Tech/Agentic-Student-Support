# Backend Environment Variables
# Copy this file to .env and replace with your actual API keys

# SendGrid API Key (required for email sending)
# Get your key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Groq API Key (required for AI-powered FAQ agent)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-secure-random-secret-key-here

# Email From Address
NOTIFICATION_EMAIL_FROM=your_college_email@example.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# OTP Feature Toggle (set to false to disable OTP verification)
ENABLE_OTP=false

# Database Selection Toggle (false = SQLite only)
USE_POSTGRES=false

# Chat Memory Backend ("sqlite" recommended; "chromadb" needs compatible pydantic)
CHAT_MEMORY_BACKEND=sqlite
